<div class="form-container">
  <div class="row justify-content-center">
      <div class="col">
        <%= simple_form_for(@book) do |f| %>
            <%= f.input :ISBN %>
            <%= f.input :category, :collection => %w[Kids Romance Sci-Fi\ and\ Fantasy Non-Fiction Classics Comics Mystery\ and\ Crime] %>
            <%= f.button :submit, class: "button-primary" %>
          <% end %>
      </div>
  </div>
  <div class="d-flex justify-content-center align-items-center mt-5">
    <%= link_to "Back", root_path, class:'button button-outline justify-content-center'%>
  </div>
</div>

  
