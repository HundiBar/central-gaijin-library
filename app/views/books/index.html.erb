<div class="container">
  <%= render 'shared/book-frame' %>

  <div class="row">
  <div class="col text-center">
      <div class="btn btn-light justify-content">
        <% if policy(Book).create? %>
          <i class="fas fa-book"></i>
          <%= link_to "Add a book", new_book_path, :class => "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% @books.each do |book| %>
  <div class="container">
     <div class="row">
        <%= link_to "#{book.category}", category_path(category: book.category), :class => "btn" %>
    </div>
  </div>
<% end %>











