<button type="button" class="btn btn-secondary btn-lg btn-block mb-3"><%= link_to "Selection of the month", "" %></button>

<div class="carousel-container" >
  <% @books.each do |book| %>
    <div class="wrapper mb-3">
      <div class="book">
        <div class="inner-book">
          <div class="img" style="padding-top: calc(1.07 * 100%)">
                  <%= link_to image_tag("#{book.cover_picture}", :border => 0, :alt => '', :title => ''), book_path(book) %>
          </div>
          <div class="page"></div>
          <div class="page page-2"></div>
          <div class="page page-3"></div>
          <div class="page page-4"></div>
          <div class="page page-5"></div>
          <div class="img final-page" style="padding-top: calc(1.07 * 100%)">
            <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/277/02-cat-hair.jpg" />
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% @books_categories.each do |category, books| %>
  <div>
    <button type="button" class="btn btn-secondary btn-lg btn-block"><%= link_to "#{category}", category_path(category: "#{category}")%></button>
  </div>
  <div class="carousel-container">
    <% books.each do |book| %>
      <div class="container">
           <div class="wrapper mt-3 mb-3">
              <div class="book">
                <div class="inner-book">
                  <div class="img" style="padding-top: calc(1.07 * 100%)">
                          <%= link_to image_tag("#{book.cover_picture}", :border => 0, :alt => '', :title => ''), book_path(book) %>
                  </div>
                  <div class="page"></div>
                  <div class="page page-2"></div>
                  <div class="page page-3"></div>
                  <div class="page page-4"></div>
                  <div class="page page-5"></div>
                  <div class="img final-page" style="padding-top: calc(1.07 * 100%)">
                    <img src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/277/02-cat-hair.jpg" />
                  </div>
                </div>
              </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

